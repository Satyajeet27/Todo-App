<ul class="my-3 list-group border border-0">
  <% if (locals.items) { %> <% locals.items.forEach((element) => { %>

  <li
    class="list-group-item list-group-item-action d-flex justify-content-between"
    value="<%= element._id %>"
  >
    <form
      action="/todo/delete"
      method="post"
      class="w-100 form-check d-flex justify-content-between"
    >
      <div class="">
        <input
          type="checkbox"
          name="checkbox"
          class="form-check-input"
          value="<%= element._id %>"
        />
        <h5 class="d-inline"><%= element.userItem %></h5>
      </div>
      <button type="submit" class="border border-0 bg-transparent">
        <i class="fa-solid fa-trash me-3" style="color: #e51515"></i>
      </button>
    </form>
  </li>

  <% }) %> <% } %>
</ul>
