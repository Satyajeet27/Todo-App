<ul class="my-3 list-group border border-0">
  <% if (locals.items) { %> <% locals.items.forEach((element) => { %>

  <li
    class="list-group-item list-group-item-action d-flex justify-content-between"
    value="<%= element._id %>"
  >
    <form
      action="/todo/delete"
      method="post"
      class="w-100 form-check d-flex justify-content-between"
    >
      <div class="d-flex align-items-center">
        <input
          type="checkbox"
          name="checkbox"
          class="form-check-input border border-secondary"
          value="<%= element._id %>"
        />
        <% if (element.isCompleted===true) { %>
        <h5
          class="m-0 fw-normal px-2 text-secondary text-decoration-line-through"
        >
          <%= element.workItem %>
        </h5>
        <% }else { %>
        <h5 class="m-0 fw-normal px-2 text-secondary">
          <%= element.workItem %>
        </h5>
        <% } %>
      </div>
      <div class="">
        <button type="submit" class="border border-0 bg-transparent">
          <i class="fa-solid fa-trash me-3" style="color: #e51515"></i>
        </button>
        <a href="/todo/update?_id=<%= element._id %>"
          ><i class="fa-solid fa-pen-to-square" style="color: #349f2d"></i
        ></a>
      </div>
    </form>
  </li>

  <% }) %> <% } %>
</ul>
